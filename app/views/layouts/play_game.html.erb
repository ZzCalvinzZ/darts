

<%= stylesheet_link_tag "play_game" %>
<h1>Darts Game #<%= @game.id %></h1>

<div id='leftcolumn' class ='<%= @player_1_turn %>'>
  <div>
    <h1> <%= @player_1.name  %></h1>
    <h2> Score: <%= @player_1.current_game_score %></h2>
  </div>

  <div>
    <%= form_tag("play_game", method: "get") do %>
      <%= label_tag(:p1_score_1, "Dart 1:") %>
      <%= number_field_tag(:p1_score_1, nil,max: 180) %>
      <%= label_tag(:p1_score_2, "Dart 2:") %>
      <%= number_field_tag(:p1_score_2, nil,max: 180) %>
      <%= label_tag(:p1_score_3, "Dart 2:") %>
      <%= number_field_tag(:p1_score_3, nil, max: 180) %>
      <%= submit_tag("Submit round score") %>
    <% end %>
  </div>

  <div>
    <h2> Wins: <%= @player_1.wins %></h2>
    <h2> Lossess: <%= @player_1.losses %></h2>
    <h2> Draws: <%= @player_1.draws %></h2>
  </div>
</div>



<div id = 'rightcolumn' class ='<%= @player_2_turn %>'>
  <div>
    <h1> <%= @player_2.name  %></h1>
    <h2> Score: <%= @player_2.current_game_score %></h2>
  </div>

  <div>
    <%= form_tag("play_game", method: "get") do %>
      <%= label_tag(:p2_score_1, "Dart 1:") %>
      <%= number_field_tag(:p2_score_1, nil, max: 180) %>
      <%= label_tag(:p2_score_2, "Dart 2:") %>
      <%= number_field_tag(:p2_score_2, nil, max: 180) %>
      <%= label_tag(:p2_score_3, "Dart 2:") %>
      <%= number_field_tag(:p2_score_3, nil, max: 180) %>
      <%= submit_tag("Submit round score") %>
    <% end %>
  </div>

  <div>
    <h2> Wins: <%= @player_2.wins %></h2>
    <h2> Lossess: <%= @player_2.losses %></h2>
    <h2> Draws: <%= @player_2.draws %></h2>
  </div>
</div>

<%= parent_layout 'application' %>